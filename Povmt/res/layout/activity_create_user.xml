<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="39"
        android:orientation="horizontal"
        android:weightSum="860" >
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textName"
        android:layout_below="@+id/linearLayout1"
        android:text="Name"
        android:textSize="20dp" />

    <AutoCompleteTextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_weight="480"
        android:background="@color/field_edit"
        android:completionHint="@string/message_login_autocomplete"
        android:completionThreshold="1"
        android:ems="10" />

    <AutoCompleteTextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_weight="480"
        android:background="@color/field_edit"
        android:completionHint="@string/message_login_autocomplete"
        android:completionThreshold="1"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textName"
        android:layout_below="@+id/textName"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textSize="20dp" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cancelButton"
        android:background="@color/darker_opaque" >
    </ListView>

    <Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@android:id/list"
        android:layout_alignLeft="@+id/textEmail"
        android:layout_weight="39"
        android:onClick="addUser"
        android:background="@color/button_default"
        android:text="Create"
        android:textColor="@color/text_yellow"
        android:textSize="12sp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textEmail"
        android:layout_below="@+id/textEmail"
        android:layout_marginTop="22dp"
        android:layout_weight="39"
        android:background="@color/button_default"
        android:onClick="cancel"
        android:text="Cancel"
        android:textColor="@color/text_yellow"
        android:textSize="12sp" />

</RelativeLayout>