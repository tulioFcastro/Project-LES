<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_name"
        android:layout_centerVertical="true"
        android:layout_weight="39"
        android:background="@color/button_default"
        android:text="Login"
        android:textColor="@color/text_yellow"
        android:textSize="12sp" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/user_name"
        android:layout_centerVertical="true"
        android:layout_weight="39"
        android:background="@color/button_default"
        android:text="Create"
        android:textColor="@color/text_yellow"
        android:textSize="12sp" />

    <AutoCompleteTextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_weight="39"
        android:background="@color/field_edit"
        android:completionHint="@string/message_login_autocomplete"
        android:completionThreshold="1"
        android:ems="10" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="39"
        android:orientation="horizontal"
        android:weightSum="860" >

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="480" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_name"
        android:layout_alignLeft="@+id/user_name"
        android:layout_marginBottom="22dp"
        android:text="User"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/welcomeToTimeItUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="@string/welcomeToTimeItUp"
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>