<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <AutoCompleteTextView
        android:id="@+id/name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="39"
        android:layout_x="59dp"
        android:layout_y="129dp"
        android:background="@color/field_edit"
        android:completionHint="@string/message_login_autocomplete"
        android:completionThreshold="1"
        android:ems="10"
        android:gravity="center" />

    <TextView
        android:id="@+id/TI_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:layout_x="109dp"
        android:layout_y="60dp"
        android:gravity="center"
        android:text="Create TI"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <NumberPicker
        android:id="@+id/hours"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="46dp"
        android:layout_weight="39"
        android:layout_x="82dp"
        android:layout_y="171dp"
        android:gravity="center" />

    <NumberPicker
        android:id="@+id/minutes"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_x="168dp"
        android:layout_y="171dp"
        android:gravity="center" />

    <Button
        android:id="@+id/button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="39"
        android:layout_x="86dp"
        android:layout_y="346dp"
        android:background="@color/button_default"
        android:gravity="center"
        android:text="Create"
        android:textColor="@color/text_yellow"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="39"
        android:layout_x="171dp"
        android:layout_y="346dp"
        android:background="@color/button_default"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="@color/text_yellow"
        android:textSize="12sp" />

</AbsoluteLayout>